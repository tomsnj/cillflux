apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: vernemq-letsencrypt-iss
spec:
  acme:
    server: https://acme-staging-v02.api.letsencrypt.org/directory
    email: "${SECRET_ACME_EMAIL}"
    privateKeySecretRef:
      name: vernemq-letsencrypt-issy
    solvers:
      - dns01:
          cloudflare:
            apiTokenSecretRef:
              name: cert-manager-secret
              key: api-token
        selector: {}
